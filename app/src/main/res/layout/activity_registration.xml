<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rickjames.eraticators.controller.RegistrationActivity">


    <Button
        android:id="@+id/SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginStart="130dp"
        android:layout_below="@id/inputtedPassword"
        android:layout_marginTop="46dp"
        android:text="Register" />

    <EditText
        android:id="@+id/Names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Name" />

    <Spinner
        android:id="@+id/userType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Names"
        android:layout_alignStart="@+id/Names"
        android:layout_alignLeft="@+id/Names" />


    <EditText
        android:id="@+id/inputtedEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userType"
        android:ems="10"
        android:hint="Email"
        android:layout_alignStart="@+id/userType"
        android:layout_alignLeft="@+id/userType"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/inputtedPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/inputtedEmail"
        android:layout_alignLeft="@+id/inputtedEmail"
        android:layout_below="@+id/inputtedEmail"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />


</RelativeLayout>