<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rickjames.eraticators.controller.UserActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RatList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/endDate"
        android:scrollbars="vertical" />

    <Button
        android:id="@+id/SignOut"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Sign Out"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/AddRat"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Add Rat"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/updateRats"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Update Rats"
        android:layout_toRightOf="@+id/AddRat"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/startDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select start date"
        android:onClick="showDatePickerDialog" />

    <EditText
        android:id="@+id/startDateText"
        android:clickable="true"
        android:editable="false"
        android:hint="Start Date"
        android:layout_toRightOf="@+id/startDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
    <Button
        android:id="@+id/endDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startDate"
        android:text="Select end date"
        android:onClick="showDatePickerDialog" />

    <EditText
        android:id="@+id/endDateText"
        android:clickable="true"
        android:editable="false"
        android:hint="End Date"
        android:layout_toRightOf="@+id/endDate"
        android:layout_below="@+id/startDateText"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

</RelativeLayout>