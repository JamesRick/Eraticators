<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rickjames.eraticators.controller.RatActivity">

    <LinearLayout
        android:id="@+id/NameTagLayout"

    android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content">
        <TextView
    android:id="@+id/NameTag"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:ems="10" />
    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10" />
</LinearLayout>


    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/NameTagLayout"
        android:layout_alignStart="@+id/NameTagLayout"
        android:layout_alignLeft="@+id/NameTagLayout"
        android:ems="10" />

    <TextView
        android:id="@+id/Type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Date"
        android:layout_alignStart="@+id/Date"
        android:layout_alignLeft="@+id/Date"
        android:ems="10" />

    <TextView
        android:id="@+id/Zip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Type"
        android:layout_alignStart="@+id/Type"
        android:layout_alignLeft="@+id/Type"
        android:ems="10" />

    <TextView
        android:id="@+id/Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Zip"
        android:layout_alignStart="@+id/Zip"
        android:layout_alignLeft="@+id/Zip"
        android:ems="10" />

    <TextView
        android:id="@+id/City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Address"
        android:layout_alignStart="@+id/Address"
        android:layout_alignLeft="@+id/Address"
        android:ems="10" />

    <TextView
        android:id="@+id/Borough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/City"
        android:layout_alignStart="@+id/City"
        android:layout_alignLeft="@+id/City"
        android:ems="10" />

    <TextView
        android:id="@+id/Latitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Borough"
        android:layout_alignStart="@+id/Borough"
        android:layout_alignLeft="@+id/Borough"
        android:ems="10" />

    <TextView
        android:id="@+id/Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Latitude"
        android:layout_alignStart="@+id/Latitude"
        android:layout_alignLeft="@+id/Latitude"
        android:ems="10" />

    <Button
        android:id="@+id/MapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:layout_marginStart="72dp"
        android:layout_marginLeft="72dp"
        android:text="View on map"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>

